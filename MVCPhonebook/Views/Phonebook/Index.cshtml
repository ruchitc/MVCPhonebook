@model List<Contact>

<h1>Contacts</h1>

<br />
<form method="get">
    <div>
        <button asp-ac="submit" class="btn btn-secondary" value="">All</button>
        @for (char ch = 'A'; ch <= 'Z'; ch++)
        {
            <button type="submit" class="btn btn-outline-secondary" name="ch" value="@ch">@ch</button>
        }
    </div>
</form>
<br />

@Html.Partial("_ContactListPartialView")

<br />
<!-- Pagination -->
<div>
    <!-- Page size dropdown -->
    <label for="pageSize">Page Size:</label>
    <select id="pageSize" onchange="changePageSize(this)">
        <option value="2">2</option>
        <option value="4">4</option>
        <option value="6">6</option>
        <!-- Add more options as needed -->
    </select>
    <br />
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                <a class="page-link" href="/Phonebook/Index?page=@i&pageSize=@ViewBag.PageSize&ch=@ViewBag.Ch">@i</a>
            </li>
        }
    </ul>
</div>
<br />

<a asp-action="Create">Add Contact</a>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var currentPageSize = @(ViewBag.PageSize); // Get current page size from ViewBag
        var pageSizeDropdown = document.getElementById("pageSize");
        // Set selected option based on current page size
        for (var i = 0; i < pageSizeDropdown.options.length; i++) {
            if (pageSizeDropdown.options[i].value === currentPageSize.toString()) {
                pageSizeDropdown.selectedIndex = i;
                break;
            }
        }
    });
    function changePageSize(select) {
        var pageSize = select.value;
        var currentPage = @(ViewBag.CurrentPage);
        window.location.href = "/Phonebook/Index?page=" + currentPage + "&pageSize=" + pageSize;
    }
</script>
