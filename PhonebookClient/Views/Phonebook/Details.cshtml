@using PhonebookClient.ViewModels
@model ContactViewModel

<h1>Contacts Details</h1>
<hr />
<div class="card">
    <div class="card-header">
    @if (Model.ImageBytes != null)
    {
        var base64 = Convert.ToBase64String(Model.ImageBytes);
        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
        <p>
            <img style="float: left;" src="@imgSrc" alt="Image" width="100" height="100" />
        </p>
    }
    else
    {
        <p>
            <img style="float: left;" src="@Url.Content("~/Uploads/"+"default-image.png")" alt="Image" width="100" height="100" />
        </p>
    }

    <h2 style="margin-top: 30px; padding-left: 120px;">@Model.FirstName @Model.LastName</h2>

    </div>

    <div class="card-body">

    <dl class="row">

        <dt class="col-sm-2">Contact number</dt>
        <dd class="col-sm-10">@Model.ContactNumber</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Company</dt>
        <dd class="col-sm-10">@Model.Company</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.State.StateName, @Model.Country.CountryName</dd>
        
        <dt class="col-sm-2">Gender</dt>
        @if (Model.Gender == "m" || Model.Gender == "M")
        {
            <dd class="col-sm-10">Male</dd>
        }
        else
        {
            <dd class="col-sm-10">Female</dd>
        }

        <dt class="col-sm-2">Is favourite</dt>
        @if (Model.IsFavourite)
        {
            <dd class="col-sm-10">Yes</dd>
        }
        else
        {
            <dd class="col-sm-10">No</dd>
        }
    </dl>
        <a style="float: right;" asp-action="Delete" asp-route-id="@Model.ContactId">Delete</a>
    <a style="float: right; padding-right: 15px;" asp-action="Edit" asp-route-id="@Model.ContactId">Edit</a>
    </div>

</div>
<hr />
