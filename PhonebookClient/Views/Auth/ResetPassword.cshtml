@using PhonebookClient.ViewModels;
@model ResetPasswordViewModel

<div class="container">
    <div class="position-relative">
      <div class="row justify-content-center container">
    <h2 class="row justify-content-center">Reset password</h2>
        <div class="col-md-6 form-wrapper">
          <form asp-action="ResetPassword" method="post">
              <input type="hidden" asp-for="LoginId" name="LoginId" />
              <input type="hidden" asp-for="SecurityQuestionId_1" name="SecurityQuestionId_1" />
              <input type="hidden" asp-for="SecurityQuestionId_2" name="SecurityQuestionId_2" />
              <input type="hidden" asp-for="SecurityQuestion_1" name="SecurityQuestion_1" />
              <input type="hidden" asp-for="SecurityQuestion_2" name="SecurityQuestion_2" />
                <div class="form-group">
                        <label asp-for="SecurityAnswer_1" class="control-lable">@Model.SecurityQuestion_1</label>
                        <input asp-for="SecurityAnswer_1" class="form-control" />
                        <span asp-validation-for="SecurityAnswer_1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SecurityAnswer_2" class="control-lable">@Model.SecurityQuestion_2</label>
                    <input asp-for="SecurityAnswer_2" class="form-control" />
                    <span asp-validation-for="SecurityAnswer_2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="control-lable">New password:</label>
                    <input type="password" asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmNewPassword" class="control-lable">Confirm new password:</label>
                    <input type="password" asp-for="ConfirmNewPassword" class="form-control" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>
                    <input style="margin-top: 20px;" type="submit" value="Submit" class="btn btn-primary" />
                    <a asp-action="LoginUser" asp-controller="Auth" class="btn btn-default">Cancel</a>
          </form>
        </div>
      </div>
    </div>
  </div>

<style>
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        padding: 20px;
        box-sizing: border-box;
    }

    .form-wrapper {
        width: 100%;
        width: 700px;
        background-color: #f7f7f7;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1)
    }

    form {
        display: flex;
        flex-direction: column;
    }
</style>