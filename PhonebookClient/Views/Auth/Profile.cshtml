@using PhonebookClient.ViewModels
@model UserDetailsViewModel;

<div class="card col-sm-6" style="margin-left:auto; margin-right:auto;">
    <div class="card-header">
        <h3>@Model.LoginId's Profile</h3>

    </div>
    <div class="card-body">

        <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

            <dt class="col-sm-4">Login Id</dt>
            <dd class="col-sm-8">@Model.LoginId</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Contact number</dt>
            <dd class="col-sm-8">@Model.ContactNumber</dd>

        </dl>
        <a asp-action="UpdatePassword" class="btn btn-secondary" style="float: right;">Change password</a>
        <a asp-action="UpdateUserDetails" class="btn btn-secondary">Update details</a>
    </div>

</div>